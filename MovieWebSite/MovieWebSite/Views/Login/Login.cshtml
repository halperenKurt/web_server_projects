@{
        ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

@if (ViewBag.Error != null)
        {
<p style="color: red;">@ViewBag.Error</p>
        }

<form method="post" action="/Login/Login">
    <label for="userFirstName">Adınız:</label>
    <input type="text" id="userFirstName" name="userFirstName" required />

    <label for="userLastName">Soyadınız:</label>
    <input type="text" id="userLastName" name="userLastName" required />

    <input type="submit" value="Giriş Yap" class="btn btn-primary" />
</form>
